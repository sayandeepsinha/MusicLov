{
  "name": "musiclov",
  "version": "1.8.0",
  "description": "MusicLov - Stream your favorite tracks, ad-free",
  "main": "src/electronlogic/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5050 && electron .\"",
    "package": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "postinstall": "bash scripts/download-ytdlp.sh || echo 'Note: Run scripts/download-ytdlp.sh manually on Windows'"
  },
  "build": {
    "appId": "com.musiclov.app",
    "productName": "MusicLov",
    "mac": {
      "category": "public.app-category.music",
      "icon": "public/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "public/icon.png",
      "category": "Audio",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "files": [
      "dist/**/*",
      "src/electronlogic/**/*",
      "binaries/**/*"
    ],
    "extraResources": [
      {
        "from": "binaries",
        "to": "binaries",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "music-metadata": "^7.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  }
}